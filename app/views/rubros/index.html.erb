<div class="container p-5">
  <p id="notice"><%= notice %></p>

  <h1>Rubros</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Perecedero</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @rubros.each do |rubro| %>
        <tr>
          <td><%= rubro.nombre %></td>
          <td class="text-light <%= rubro.perecedero ? "bg-danger" : "bg-success" %>"><%= rubro.perecedero ? "SI" : "NO" %></td>
          <td><%= link_to 'Editar', edit_rubro_path(rubro) %></td>
          <td><%= link_to 'Eliminar', rubro, method: :delete, data: { confirm: 'EstÃ¡s segura de ello?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo Rubro', new_rubro_path %>
</div>
